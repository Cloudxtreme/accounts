@{
ViewBag.Title = "Verify";
}




<div class="container" id="enter-code">
<h1 class="page-header">Forgotten your sign in details?
<a class="link-text right header" href="">Help!</a>
</h1>
<form name="form" method="post" action="{{model.loginUrl}}">
<anti-forgery-token token="model.antiForgery"></anti-forgery-token>

<fieldset class="inner-content">

<h3 class="subheading">A code has been sent to [mobile number].</h3>
<p class="content-text">
<span class="bold-text">Complete verification by visiting the <a href="">'about me'</a> page to input your code.</span><br>
Please be aware that this code will expire within [_ hours]. If your mobile number is not verified it cannot be used.
</p>

<div class="form-wrapper">
<label for="reset" class="input label-heading">Your security code</label>
<input required name="reset" id="reset" type="text" class="input text reset-icon" placeholder="Enter your code" ng-model="model.username">
</div>

<hr class="divider">

<div class="form-wrapper">
<button class="btn action" ng-disabled="form.$invalid">Continue</button>
<a class="link-text right" href="">I haven't received my code</a>
</div>

</fieldset>
</form>
</div>

<div class="container" id="enter-code-email">
<h1 class="page-header">Forgotten your sign in details?
<a class="link-text right header" href="">Help!</a>
</h1>
<form name="form" method="post" action="{{model.loginUrl}}">
<anti-forgery-token token="model.antiForgery"></anti-forgery-token>

<fieldset class="inner-content">
<h3 class="subheading">A code has been sent to [email address].</h3>
<p class="content-text">
<span class="bold-text">Please use the link within the email to verify the address you supplied.</span><br>
The verification link will expire within [_ hours]. If your link expires you will need to request another code.
</p>

<div class="form-wrapper">
<label for="reset" class="input label-heading">Enter your reset code</label>
<input required name="reset" id="reset" type="text" class="input text reset-icon" placeholder="Enter your reset code" ng-model="model.username">
</div>

<hr class="divider">

<div class="form-wrapper">
<button class="btn action" ng-disabled="form.$invalid">Continue</button>
<a class="link-text right" href="">I haven't received my code</a>
</div>

</fieldset>
</form>
</div>



